                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KDA)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreepScore)
