@model IEnumerable<Lab02_ed_22.Models.JugadorModel>

@{
    ViewData["Title"] = "BusquedaRol";
}

<h1>BusquedaRol</h1>

<p>
        @using (Html.BeginForm())
        {
            <p>
            Busqueda por Rol: @Html.TextBox("Rol") <br />
            <input type="submit" value="BusquedaRol" />
            </p>
        }
</p>
