@model IEnumerable<Lab02_ed_22.Models.JugadorModel>

@{
    ViewData["Title"] = "Lista jugadores";
}

<form asp-controller="Jugador" asp-action="Index" method="post" enctype="multipart/form-data">
    <input type="file" name="file"  />
    <button type="submit">Cargar</button>
</form>
<h1>Jugadores</h1>
<p>
    <a asp-action="Create">Nuevo jugador</a>
    <a asp-action="BusquedaNombre"> Busqueda Nombre </a>
    <a asp-action="BusquedaApellido"> Busqueda Apellido </a>
    <a asp-action="BusquedaRol"> Busqueda Rol </a>
    <a asp-action="BusquedaKDA"> Busqueda KDA </a>
    <a asp-action="BusquedaCreepScore"> Busqueda CreepScore </a>
    <a asp-action="BusquedaEquipo"> Busqueda Equipo </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KDA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreepScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KDA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreepScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Nombre}) |
                @Html.ActionLink("Details", "Details", new { id=item.Nombre }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Nombre }) |
            </td>
        </tr>
}
    </tbody>
</table>
